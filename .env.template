# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit the .env file to Git!

# Core Configuration
ENVIRONMENT=development

# Google Cloud API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# GCP Project Configuration (set based on your target environment)
GCP_PROJECT_ID=your_project_id_here
FIRESTORE_PROJECT_ID=your_project_id_here

# Firebase Configuration (set based on your target environment)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id_here
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=bravo_vectors
DB_USER=bravo_user
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432

# Firebase Configuration (if needed)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Additional Security Settings
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# IMPORTANT: 
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Set values appropriate for your target environment (dev/test/prod)
